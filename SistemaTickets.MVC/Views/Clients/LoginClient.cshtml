@{

    ViewData["Title"] = "Client Login";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Login">
    <div class="mb-3">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="mb-3">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>
    <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Content("~/Home/Index")'">Login</button>

</form>

<!-- Botón de registro que redirige a la página de registro -->
<div class="mt-3">
    <p>Don't have an account?</p>
    <button type="button" class="btn btn-secondary" onclick="window.location.href='https://localhost:7019/Clients/RegisterClient'">Register</button>


</div>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger mt-2">
        <strong>@ViewData.ModelState[""].Errors[0].ErrorMessage</strong>
    </div>
}
